[Unit]
Description=pixie
After=network.target
StartLimitInterval=0

[Service]
Type=simple
User=root
Group=root
ExecStart=/usr/local/bin/pixie-server -s /var/local/lib/pixie
Environment=RUST_LOG=info
WorkingDirectory=/var/local/lib/pixie
Restart=always
RestartSec=30
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
